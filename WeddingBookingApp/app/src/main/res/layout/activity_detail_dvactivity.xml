<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.dichvu.DetailDVActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chudao">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/back2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DỊCH VỤ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <ImageView
        android:id="@+id/detail_image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detail_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên dịch vụ"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/detail_gia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gia"
        android:textStyle="bold"

        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/detail_mota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo ta"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addservice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Thêm vào dịch vụ"
        android:layout_gravity="center"
        android:background="@drawable/btn"/>
    </LinearLayout>
</LinearLayout>