<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/thydo"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tên khách hàng:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tenkhlc"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Khách Hàng"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Số điện thoại:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/sdtlc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Số Điện Thoại" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Loại sảnh:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/loaisanhlc"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại Sảnh" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Ngày đặt:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/datelc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Ngày" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Số lượng bàn:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/slb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Số Lượng bàn" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Giờ tổ chức:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/selectedTimelc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Giờ" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Giá dịch vụ:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/giaDV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Giá" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Giá sảnh:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/giasanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Giá" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Giá thực đơn:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/giatd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Giá" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Trạng thái:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/status_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hii"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tổng tiền:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Tổng tiền" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndeposit_contract"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@drawable/btnxacnhan"
            android:text="Xác nhận tiền cọc"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncontract"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@drawable/btnxacnhan"
            android:text="Thanh toán hợp đồng"/>

    </LinearLayout>
</LinearLayout>
